<%-include ../partials/header.ejs %>


<%-include ../partials/main_nav.ejs %>

<!--Content for Add Book-->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1>
                <%=title %>
            </h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                        <input class="form-control" type="text" name="name" 
                        id="nameTextField" placeholder="Book Title" required>
                </div>  
                <div class="form-group">
                    <label for="authorTextField">Author</label>
                        <input class="form-control" type="text" name="author" 
                        id="authorTextField" placeholder="Book Author" required>
                </div>  
                <div class="form-group">
                    <label for="publishedTextField">Year </label>
                        <input class="form-control" type="text" name="published" 
                        id="publishedTextField" placeholder="Year published" required>
                </div>    
                <div class="form-group">
                    <label for="descriptionTextArea">Description </label>
                        <textarea class="form-control" type="text" name="description" 
                        id="descriptionTextArea" placeholder="brief description of the book" required></textarea>
                </div> 
                <div class="form-group">
                    <label for="priceTextField">Price </label>
                        <input class="form-control" type="number" name="price" 
                        id="priceTextField" placeholder="price" required>
                </div> 
                <button class="btn btn-primary" type="submit">
                  <i class="fas fa-edit"></i>Add
                </button>
                <a href="/booklist" class="btn btn-warning">
                     <i class="fas fa-undo"></i>   Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<%-include ../partials/bottom_nav.ejs %>
<%-include ../partials/footer.ejs %>